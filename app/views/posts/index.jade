extends ../layouts/default

block content
  if(q)
    h2 
      | Buscando por: 
      small=q
  if (posts.length)
    each post in posts
      h3 
        a.title(href='/posts/'+post.slug, title=post.title)= post.title
      !=truncate(post.body, 600)
      
      .row
        .span8.tags
          p
          p
            i.icon-user
            |  by 
            a(href=href='/users/'+post.user._id)= post.user.email
            |  | 
            i.icon-calendar
            = formatDate(post.createdAt, "%b %d, %Y")
            |  | 
            i.icon-comment
            a(href=href='/posts/'+post._id)  #{post.comments.length} ComentÃ¡rio(s)
            |  | 
            i.icon-tags
            |  Tags :
            if(post.tags)
              each tag in post.tags.split(',')
                a.label.label-info(href="/tags/"+tag) #{tag} 

      .clearfix
      hr

    if (pages > 1)
      .pagination
        ul
          != createPagination(pages, page)
  else
    h2 Nehum post publicado