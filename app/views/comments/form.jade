form.form-vertical(method="post", action="/posts/#{post._id}/comments")
  if (messages.length)
    each message in messages
      .fade.in.alert.alert-block.alert-error
        a.close(data-dismiss="alert", href="javascript:void(0)") x
        = message
  .control-group
    .controls
      input#username.span4(type='text', name='email', placeholder='Digite seu email')
  .control-group
    .controls
      textarea#comment.span4(type='text', rows="6", name="body", placeholder='Digite seu coment√°rio')
  button.btn.btn-primary(type='submit') 
    <i class="icon-pencil icon-white"></i>
    | Enviar
